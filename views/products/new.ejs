
    <form class="" action="/products" method="post">
      <fieldset>
        <legend>
          Add New Product
        </legend>

        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="">

        <label for="description">Description</label>
        <textarea name="description" rows="8" id="description"></textarea>

        <fieldset>
          <legend>Product Image</legend>

        <input type="url" name="images" value="" required>


            </fieldset>

        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="">

        <label for="qty">Quantity</label>
        <input type="number" id="qty" name="qty" value="">

        <label for="category"></label>
        <select class="" id="category" name="category">
          <option value="dinnerware">Dinnerware</option>

          <option value="cookware">Cookware</option>

          <option value="bakeware">Bakeware</option>

          <option value="cutlery">Cutlery</option>

          <option value="decor">Decor</option>
        </select>
        <input type="submit" name="" value="Create">
      </fieldset>
    </form>
