    <form onsubmit="return confirm('are you sure you want to delete this product? This action cannot be undone.')" class="" action="/products/delete/<%=product._id%>?_method=DELETE" method="post">
      <input type="submit" name="" value="Delete">
    </form>
    <a href="/products/edit/<%=product._id%>"> <button type="button" name="button">Edit</button> </a>


  <%}%>
