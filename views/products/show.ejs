
<%if(success.length > 0){%>
<div class="new-product-success">
  <%= success %>
</div>
<%}%>
    <!-- I have access to both the artist object and the product object. -->
<div class="product-container">
<div class="img-container">


<img src="<%=product.images%>" alt="">
<div class="controls">
  <% if(user && (user._id == artist._id || user.role === 'admin')){%>
  <form onsubmit="return confirm('are you sure you want to delete this product? This action cannot be undone.')" class="" action="/products/delete/<%=product._id%>?_method=DELETE" method="post">
    <input type="submit" name="" value="Delete">
  </form>
  <a href="/products/edit/<%=product._id%>"> <button type="button" name="button">Edit</button> </a>
  <%}%>
</div>

</div>

  <div class="product-info">


    <h2><%=product.title%></h2>
    <p><%=product.description%></p>


<%if(product.qty > 0){%>
  <button type="button" name="button">
    Add to cart $<%=product.price%>
<%} else{%>
  Sold out
  </button>
<%}%>
  </div>
    </div>

<div class="artist-container">

<div class="artist-info">
<img src="<%=artist.profilePic%>" alt="<%=artist.firstName%>">

<div>


<h3><%=artist.firstName%> <%=artist.lastName%></h3>
  <p><%=artist.biography%></p>
  <a class="see-all" href="/artists/products/<%=artist._id%>">See all of <%=artist.firstName%>'s products.</a>
  </div>
</div>

</div>
